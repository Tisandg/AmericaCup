<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayerActivity">

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/size_img_player"
        android:layout_height="@dimen/size_img_player"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/player_name"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Nombre jugador"
        android:textSize="@dimen/name_player"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/player_birthday"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fecha de nacimiento"
        android:textSize="@dimen/fields_player"/>

    <TextView
        android:id="@+id/player_nacionality"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/fields_player"
        android:text="Colombiano"/>

    <TextView
        android:id="@+id/player_position"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/fields_player"
        android:text="Position"/>

</LinearLayout>